{
  "name": "Itabashi Auto Post",
  "description": "Use OAuth in Extensions",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "identity", "scripting", "alarms", "notifications"],
  "action": {
    "default_popup": "src/pages/popup/index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://live.nicovideo.jp/watch/lv*"],
      "js": ["content.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["https://live.nicovideo.jp/watch/lv*"]
  },
  "oauth2": {
    "client_id": "${process.env.VITE_OAUTH_CLIENT_ID}",
    "scopes": ["${process.env.VITE_OAUTH_SCOPES}"],
    "redirect_uri": "${process.env.VITE_OAUTH_REDIRECT_URI}"
  },
  "host_permissions": [
    "https://script.google.com/macros/s/*",
    "https://script.googleusercontent.com/macros/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "key": "${process.env.VITE_EXTENSION_KEY}"
}
