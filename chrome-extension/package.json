{
  "name": "itabashi-auto-post",
  "displayName": "Itabashi auto post",
  "version": "0.0.1",
  "description": "ニコ生配信開始ポスト自動化",
  "author": "lihs-dev",
  "scripts": {
    "dev": "plasmo dev",
    "after-build:dev": "NODE_ENV=development node ./after-build/add-redirect-uri.js",
    "after-build:prd": "NODE_ENV=production node ./after-build/add-redirect-uri.js",
    "build:dev": "NODE_ENV=development plasmo build --tag=dev && pnpm run after-build:dev",
    "build:prd": "NODE_ENV=production plasmo build --tag=production && pnpm run after-build:prd",
    "package": "plasmo package",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@gsap/react": "^2.1.2",
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.13.0",
    "classnames": "^2.5.1",
    "framer-motion": "^12.1.0",
    "gsap": "^3.12.7",
    "http-errors": "^2.0.0",
    "immutable": "^5.0.3",
    "inversify": "^6.2.2",
    "js-sha256": "^0.11.0",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-select": "^5.10.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/addon-interactions": "^8.5.3",
    "@storybook/addon-onboarding": "^8.5.3",
    "@storybook/blocks": "^8.5.3",
    "@storybook/react": "^8.5.3",
    "@storybook/react-vite": "^8.5.3",
    "@storybook/test": "^8.5.3",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "chrome": "link:@types/@types/chrome",
    "eslint": "^9.19.0",
    "eslint-plugin-storybook": "^0.11.2",
    "prettier": "3.2.4",
    "sass": "^1.83.4",
    "storybook": "^8.5.3",
    "typescript": "5.3.3",
    "uuid": "^11.0.5",
    "vite": "^6.0.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.4",
    "vitest-fetch-mock": "^0.4.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "key": "$EXTENSION_KEY",
    "oauth2": {
      "client_id": "$PLASMO_PUBLIC_OAUTH_CLIENT_ID",
      "scopes": [
        "tweet.write",
        "tweet.read",
        "users.read"
      ]
    },
    "externally_connectable": {
      "matches": [
        "https://live.nicovideo.jp/watch/lv*"
      ]
    },
    "permissions": [
      "storage",
      "identity",
      "scripting",
      "alarms",
      "notifications"
    ]
  }
}
